<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.FINApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar, action bar and navigation bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/darkwhite</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/darkwhite</item>
        <item name="swipeRefreshLayoutProgressSpinnerBackgroundColor">@color/primary</item>
        <item name="android:textColor">@color/lightblack</item>
        <item name="colorTertiary">@color/lightblack</item>
        <item name="colorOnTertiary">@color/lightlightblack</item>

        <item name="textColorAlertDialogListItem">@color/red</item>
    </style>
</resources>