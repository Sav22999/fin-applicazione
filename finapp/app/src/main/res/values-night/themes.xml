<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.FINApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar, action bar and navigation bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/lightblack</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/lightblack</item>
        <item name="android:actionBarItemBackground">@color/lightblack</item>

        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/lightblack</item>
        <item name="swipeRefreshLayoutProgressSpinnerBackgroundColor">@color/secondary</item>
        <item name="android:textColor">@color/darkwhite</item>
        <item name="colorTertiary">@color/darkwhite</item>
        <item name="colorOnTertiary">@color/darkdarkwhite</item>

        <item name="textColorAlertDialogListItem">@color/lightred</item>
    </style>
</resources>